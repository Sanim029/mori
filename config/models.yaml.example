# 模型配置示例（多Agent架构）
# 复制此文件为 models.yaml 并填入你的API密钥
#
# 注意：配置结构已改为字典格式，使用配置名（key）进行引用

models:
  # 主agent使用的强模型配置
  main_gpt4:
    model_name: gpt-4
    model_type: openai
    api_key: ${OPENAI_API_KEY}  # 从环境变量读取
    generate_kwargs:
      temperature: 0.7
      max_tokens: 2000

  # 快速响应模型配置
  fast_gpt35:
    model_name: gpt-3.5-turbo
    model_type: openai
    api_key: ${OPENAI_API_KEY}
    generate_kwargs:
      temperature: 0.8
      max_tokens: 1500

  # DashScope (阿里云通义千问) 配置
  qwen_max:
    model_name: qwen-max
    model_type: dashscope
    api_key: ${DASHSCOPE_API_KEY}
    generate_kwargs:
      temperature: 0.7
      max_tokens: 2000

  qwen_turbo:
    model_name: qwen-turbo
    model_type: dashscope
    api_key: ${DASHSCOPE_API_KEY}
    generate_kwargs:
      temperature: 0.8

  # Ollama本地模型配置
  local_llama3:
    model_name: llama3
    model_type: ollama
    base_url: http://localhost:11434
    generate_kwargs:
      temperature: 0.8

  # DeepSeek配置（使用OpenAI兼容接口）
  deepseek_chat:
    model_name: deepseek-chat
    model_type: openai
    api_key: ${DEEPSEEK_API_KEY}
    base_url: https://api.deepseek.com/v1
    generate_kwargs:
      temperature: 0.7
      max_tokens: 2000

# 嵌入模型配置（用于长期记忆功能）
embedding_models:
  # DashScope (阿里云通义千问) 嵌入模型
  dashscope_embedding:
    model_name: text-embedding-v2
    model_type: dashscope
    api_key: ${DASHSCOPE_API_KEY}

  dashscope_embedding_v3:
    model_name: text-embedding-v3
    model_type: dashscope
    api_key: ${DASHSCOPE_API_KEY}

  # OpenAI 嵌入模型
  openai_embedding_small:
    model_name: text-embedding-3-small
    model_type: openai
    api_key: ${OPENAI_API_KEY}
    dimensions: 1536

  openai_embedding_large:
    model_name: text-embedding-3-large
    model_type: openai
    api_key: ${OPENAI_API_KEY}
    dimensions: 3072

  # Gemini 嵌入模型
  gemini_embedding:
    model_name: text-embedding-004
    model_type: gemini
    api_key: ${GEMINI_API_KEY}

  # Ollama 本地嵌入模型
  ollama_nomic:
    model_name: nomic-embed-text
    model_type: ollama
    base_url: http://localhost:11434

  ollama_mxbai:
    model_name: mxbai-embed-large
    model_type: ollama
    base_url: http://localhost:11434
